{
    "shard_num": 8,
    "test_account_num": 100,
    "num_contracts":1024,
    "storage_dir": "/storage/test_statedb/",
    "block_time_ms": 1000,
    
    "benchmark": {
        "enabled": true,
        "duration_seconds": 4,
        "warmup_seconds": 1,
        "cooldown_seconds": 1,
        
        "workload": {
            "ct_ratio": 0,
            "send_contract_ratio": 0.5,
            "injection_rate": 100,
