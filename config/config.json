        "output": {
            "format": "csv",
            "file": "results/benchmark_results.csv",
            "include_raw_latencies": false
        },

        "finalization_timeout_seconds": 30,
        "finalization_poll_interval_ms": 200,
        
        "sweep": {
            "enabled": false,
            "parameter": "ct_ratio",
            "values": [0.0, 0.25, 0.5, 0.75, 1.0]
        }
